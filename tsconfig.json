{
  "compilerOptions": {
    "strictNullChecks": true,
    "jsx": "react",
    "module": "commonjs",
    "target": "es6",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "noImplicitAny": false,
    "preserveConstEnums": true,
    "removeComments": true,
    "sourceMap": true,
    "allowJs": true,
  },
  "include": ["./*.ts", "./src/**/*"],
  "exclude": ["./node_modules/", "./src/**/*.test.js"]
}
